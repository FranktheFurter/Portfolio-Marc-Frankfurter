@page "/testpage"

<video class="bg-video" src="videos/Lights.mp4" loop muted autoplay></video>

<svg class="banner">
    <mask id="mask">
        <rect fill="white" width="100%" height="100%"></rect>
        <text id="gtheading" dominant-baseline="central" x="50%" y="50%" text-anchor="middle">Marc Frankfurter</text>
    </mask>

    <rect width="100%" height="100%" id="mask-bg"></rect>
</svg>

<style>
    svg {
        position: absolute;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100%;
    }

    #gtheading {
        font-family: "Raleway";
        font-size: 60px;
        letter-spacing: 8px;
        text-transform: uppercase;
    }

    .bg-video {
        margin: 0 auto;
        overflow: hidden;
        width: 100%;
        height: 100vh;
    }

    #mask-bg {
        mask: url("#mask");
    }

    @@media(max-width:1024px) {
        #gtheading {
            font-size: 68;
            letter-spacing: unset;
        }
    }

    @@media(max-width:600px) {
        #gtheading {
            font-size: 50;
        }
    }
</style>

