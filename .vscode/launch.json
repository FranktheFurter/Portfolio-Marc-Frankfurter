{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "build",
            "name": "Launch and Debug Standalone Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}",
            "url": "https://localhost:5001", // Tell launch where to find site
        }
    ]
}